<area name="durins.way" default-route="road">

<location name="durins.way.west">
	<links>
		<route dir="n" dest="durins.way.sw" />
	</links>
</location>

<location name="durins.way.sw">
	<links>
		<route dir="n" dest="durins.way.chasm" />
	</links>
</location>

<location name="durins.way.chasm">
	<links>
		<route dir="e" dest="durins.way.arch" />
	</links>
</location>

<location name="durins.way.arch">
	<links>
		<route dir="u" dest="durins.way.central" />
		<route dir="d" dest="mines.moria" />
		<route dir="e" dest="durins.way.narrow" size="medium" />
	</links>
</location>

<location name="durins.way.narrow">
	<links>
		<script dir="e" dest="durins.way.west" reverse="one-way">
			<message message="durins.way.collapse" />
			<!--
			<teleport dest="underground.river.east" />
			-->
		</script>
	</links>
</location>

<location name="durins.way.central">
	<links>
		<route dir="e" dest="durins.way.east" />
	</links>
</location>

<location name="durins.way.east">
	<links>
		<route dir="s" dest="hall.21" />
	</links>
</location>

</area>
